<p><%= team.league %></p>

<!-- add player form   -->

<form id="add players" method="POST" action="/teams/<%= team._id %>/players">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name"><br><br>
    <label for="position"></label>
    <label for="Age">Age:</label>
    <input type="number" id="name" name="age"><br><br>
    <label for="Country">Country:</label>
    <select type="text" id="country" name="country">
        <option value="USA">USA</option>
        <option value="Mexico">Mexico</option>
        <option value="Bresil">Bresil</option>
        <option value="Argentina">Argentina</option>
        <option value="spain">spain</option>
        <option value="France"></France>
        <option value="Senegal">Senagal</option>
        <option value="">Mexico</option>
        <option value="Uruguay">Uruguay</option>
        <option value="England">England</option>

        <!-- add more options later -->
    </select><br><br>
    <label for="Position">Position</label>
    <select type="text" id="league" name="league">
        <option value="Right Back">Right Back</option>
        <option value="Center">Center Back</option>
        <option value="Striker">Striker</option>
        <option value="Midfielder">Midfielder</option>
        <option value="Goalkeeper">Goalkeeper</option>

        <!-- add more options later -->
    </select><br><br>
    <input type="submit" value="Add Player">
</form>

<!-- Display players  -->
<% team.players.forEach(function(player) { %>
    <h3><%= player.name %></h3>
  <h3><%= player.position %></h3>
  <h3><%= player.country %></h3>
  <h3><%= player.age %></h3>
    <form method="POST" action="/players/<%=player._id%>?_method=DELETE" class="delete-form">
      <button type ="submit">X</button>
    </form>
  <% }) %>


 
